<div class="row">
  <div class="small-12 large-6 small-centered columns">
    <h2>Log in to your account</h2>
    <% if alert %>
    <div class="row">
      <div class="large-12 columns">
        <div data-alert class="alert-box alert radius">
        <%= alert %>
        </div>
      </div>
    </div>
    <% end %>
    <% if notice %>
    <div class="row">
      <div class="large-12 columns">
        <div data-alert class="alert-box success radius">
        <%= notice %>
        </div>
      </div>
    </div>
    <% end %>

    <%= form_tag sessions_path, :method => :post do %>
      <div class="row">
        <div class="large-12 columns">
          <%= label_tag :email %>
          <%= email_field_tag :email, '' %>
        </div>
      </div>

      <div class="row">
        <div class="large-12 columns">
          <%= label_tag :password %>
          <%= password_field_tag :password, '' %>
        </div>
      </div>

      <div class="row">
        <div class="large-12 columns">
          <%= link_to 'Forgot your password?', new_password_reset_path, class: 'left' %>
          <button class="button success radius right">Log In</button>
        </div>
      </div>
    <% end %>
  </div>
</div>

